
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminLogin</title>
    <link href="~/Resources/css/old/default.css" rel="stylesheet" />
    <style type="text/css">
        .auto-style1 {
            width: 60px;
        }
    </style>
</head>
<body>
    <form id="loginform" action="/Account/Login" data-ajax="true" data-ajax-method="Post" data-ajax-success="OnSuccess" method="post" name="loginform">
        <div class="topBox">
            <div class="topLogo">
                <img src="/Resources/images/old/logo_new.png" alt="第一届“品茗杯”算量软件大赛" border="0" />
            </div>
        </div>
        <div class="Container">
            <div class="loginBox">
                <div class="loginCnt">
                    <div class="dlBox">
                        <div class="dlBoxTitle">登录</div>
                        <div class="dlCntBox">
                            <table style="width: 294px; height: 226px;" border="0">
                                <tr>
                                    <td style="text-align: right; font-size: 14px;" class="auto-style1" >用户名：</td>
                                    <td>
                                        <input id="UserName" name="UserName" type="text" class="dlTxt" style="width: 185px;" autocomplete="off" />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: right; font-size: 14px;" class="auto-style1">密&nbsp;码：</td>
                                    <td>
                                        <input id="UserPassword" name="UserPassword" type="password" class="dlTxt" style="width: 185px;" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align: center;" height="90">
                                        <input type="submit" id="btnLogin" class="dlBtn01"
                                               value="登录" />
                                        <input type="button" id="btnRegister" value="注册" style="display: none;" class="btnEnter" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer cf f12" id="bt">技术支持：杭州品茗安控信息技术股份有限公司&nbsp;&nbsp;&nbsp;&nbsp;联系方式：15067104488</div>
    </form>
    <script src="~/Resources/js/jquery-1.12.4.min.js"></script>
    <script src="~/Resources/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Resources/js/old/expandDialog.js"></script>
    <script src="http://pmjs.pinming.cn/Resources/plus/layer/3.1.0/layer.js"></script>
    <script type="text/javascript">
        function Warning(msg) {
            $("#warning").html(msg);
        }
        function OnSuccess(data) {
            if (data.success) {
                location.href = "/Main/Index";
            } else {
                layer.open({
                    skin: 'layui-layer-zjds',
                    content: data.msg
                });
            }
        }
    </script>
</body>
</html>
